  <PropertyGroup>
    <ApplicationIcon>xboxmouse.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <Resource Include="xboxmouse.ico" />
  </ItemGroup>
  <ItemGroup>
