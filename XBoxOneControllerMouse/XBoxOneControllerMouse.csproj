    <PackageReference Include="SharpDX.XInput" Version="4.2.0" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="InputActions">
      <HintPath>..\..\InputActions\InputActions\bin\Release\netstandard2.1\InputActions.dll</HintPath>
    </Reference>
  </ItemGroup>
