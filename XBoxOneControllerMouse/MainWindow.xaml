<Window x:Class="XBoxOneControllerMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XBoxOneControllerMouse"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="XBox One Controller Mouse" Height="450" Width="800">
    <Grid>
        <tb:TaskbarIcon IconSource="xboxmouse.ico" ToolTipText="XBox One Controller Mouse">
            <tb:TaskbarIcon.TrayPopup>
                <local:TrayPopUp />
            </tb:TaskbarIcon.TrayPopup>
        </tb:TaskbarIcon>
    </Grid>
</Window>
